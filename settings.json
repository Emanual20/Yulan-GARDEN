{
    "debug": false,
    "input_path": "",
    "input_ext": "",
    "output_path": "",
    "if_filter": true,
    "filter_paras":{
        "fil_short_texts": {
            "use" : true,
            "param": 170
        },
        "fil_non_ch": {
            "use": true,
            "param": 0.4
        },
        "fil_copyright": {
            "use": true,
            "ch_list":[
                "版权所有",
                "复制必究",
                "未经授权",
                "授权书",
                "书面授权",
                "版权声明",
                "严禁转载",
                "免责声明"
            ],
            "en_list": [
                "copyright",
                "all rights reserved"
            ]
        },
        "fil_short_lines": {
            "use": true,
            "param": 0.25
        }
    },
    "if_clean": false,
    "clean_paras":{
        "rm_crawlerchars": {
            "use": true
        },
        "sub_newline": {
            "use": true
        },
        "rm_re_rules": {
            "use": true,
            "re_list": [
                "【.*报道】",
                "\\(.*记者.+\\)",
                "记者( [\u4e00-\u9fa5]+)+( 报道)?",
                "（记者.{1,10}）",
                "\\(记者.{1,10}\\)",
                "（视频来源：.{1,20}）",
                "来源：[a-z|A-Z|0-9]+",
                "\\[ ?来源.*\\]",
                "来源: [\u4e00-\u9fa5]+",
                "来源[ |：][\u4e00-\u9fa5]+",
                "作者：[\u4e00-\u9fa5]*",
                "[\u4e00-\u9fa5]*\\d月\\d+日[\u4e00-\u9fa5]*[讯|电]",
                "（[\u4e00-\u9fa5]*简讯）",
                "（?(文/)?本报",
                "[（|\\(]?原标题：?.{1,50}\n",
                "[（|\\(]?题：.{1,50}\n",
                "责编：?.{1,20}[\u4e00-\u9fa5]",
                "(责任)?编辑[ |：|:][\u4e00-\u9fa5|、]+",
                "\\[ ?编辑： [\u4e00-\u9fa5]+ \\]",
                "《 ?[\u4e00-\u9fa5]+ ?》 ?\\d+年\\d+月\\d+日 ?第?\\d+版",
                "《 ?[\u4e00-\u9fa5]+ ?》 ?（ ?\\d+年\\d+月\\d+日 ?第? ?\\d+ ?版）",
                "[\u4e00-\u9fa5]+[ |/]摄",
                "[\u4e00-\u9fa5]+[报|网|社]\/[\u4e00-\u9fa5]+",
                "[\u4e00-\u9fa5]+[报|网|社]讯",
                "【文[：|/| ][\u4e00-\u9fa5]+[报|网|社].{1,30}】",
                "图片说明：[\u4e00-\u9fa5]*",
                "图文[：|/| ][\u4e00-\u9fa5]+\n",
                "（ ?图文[：|/| ][\u4e00-\u9fa5|：|，| ]+ ?）\n",
                "（.*供图）",
                "注：.{1,30}\n",
                "上一页.?\n",
                "下一页.?\n",
                "上一篇.?\n",
                "下一篇.?\n",
                "尾页.?\n",
                "（[\n|\t| ]*）",
                "\\([\n|\t| ]*\\)",
                "\\[[\n|\t| ]*\\]",
                "【[\n|\t| ]*】"
            ]
        },
        "sub_re_rules": {
            "use": true,
            "re_dict": {
                "Hello": "hello",
                "图片来源：[a-z|A-Z|0-9|,|;|/| |\\.|-]*\n": "\n",
                "标签：.{0,8}\n": "\n",
                "\n.*摄\n": "\n",
                "（图片.{1,30}号）\n": "\n",
                "（，.{1,30}）\n": "\n",
                "免责声明：.{1,200}\n": "\n"
            }
        },
        "rm_str_rules": {
            "use": true,
            "str_list": [
                "来源：本站",
                "本报讯",
                "(经济观察)",
                "热门推荐",
                "正文",
                "据新华社",
                "(完)",
                "（完）",
                "（供图）",
                "(供图)",
                "（图左）",
                "（图右）",
                "资料图\n",
                "编者按",
                "分享到："
            ]
        },
    },
    "if_merge": false,
    "merge_paras":{

    },
    "if_cut": false,
    "cut_paras":{

    },
    "if_parallel": true,
    "parallel_paras":{
        // it means if the input data is already cut into pieces
        "if_cut": false,
        // cut_tmpfiles_path will be os.path.join(<output_path>/.tmp)
        "cut_tmpfiles_path": "",
        "n_process": 10,
        "chunk_size": -1,
    },
    "if_debug": false,
    "debug_paras": {
    },
}